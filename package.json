{
  "name": "@dojot/cron",
  "version": "0.1.0",
  "description": "Scheduler for events/notifications to be emitted to other dojot's microservices",
  "main": "server.js",
  "scripts": {
    "start": "node index.js",
    "debug": "node --inspect=0.0.0.0 index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "check-licenses": "apache2-license-checker",
    "lint": "eslint app/** test/** index.js --ext .js",
    "lint: fix": "eslint --fix --ext .js."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dojot/cron.git"
  },
  "keywords": [
    "schedule",
    "trigger",
    "notification",
    "dojot"
  ],
  "author": "Rafael Augusto Scaraficci",
  "contributors": [
    "Mariane Previde",
    "Wilton Filipe Canatto",
    "Gilmaicor Leandro",
    "Rodrigo Aparecido Silva Maia"
  ],
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/dojot/cron/issues"
  },
  "homepage": "https://github.com/dojot/cron#readme",
  "dependencies": {
    "@dojot/microservice-sdk": "^0.2.2",
    "axios": "^0.21.4",
    "cron": "^1.8.2",
    "cron-parser": "^3.5.0",
    "joi": "^17.4.2",
    "lodash.camelcase": "^4.3.0",
    "mongodb": "^3.7.3",
    "uuid": "^8.3.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.js",
      "!index.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleDirectories": [
      "node_modules",
      "app",
      "."
    ],
    "testPathIgnorePatterns": [
      "./node_modules"
    ],
    "testRegex": [
      "test/unit/*"
    ],
    "verbose": true
  },
  "devDependencies": {
    "@bbc/apache2-license-checker": "^1.1.4",
    "axios-mock-adapter": "^1.20.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.0.14",
    "jest": "^26.6.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1"
  }
}
